{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-total" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ action.cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error.permission %}
		<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_permission }}
			<button type="button" class="close" data-dismiss="alert">&times;</button>
		</div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
			</div>
			<div class="panel-body">
				<form action="{{ action.save }}" method="post" enctype="multipart/form-data" id="form-total" class="form-horizontal">
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-payment">{{ entry_payment_method }}</label>
						<div class="col-sm-10">
							<select name="payment_discount_payment_type" id="input-payment" class="form-control">
								{% for dis_payment in payment_methods %}
								{% if dis_payment.code == payment_discount_payment_type %}
								<option value="{{ dis_payment.code }}" selected="selected">{{ dis_payment.name }}</option>
								{% else %}
								<option value="{{ dis_payment.code }}">{{ dis_payment.name }}</option>
								{% endif %}
								{% endfor %}
							</select>
							{% if error.payment_type %}
							<div class="text-danger">{{ error_payment_method }}</div>
							{% endif %}
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-discount">{{ entry_discount[1] }}</label>
						<div class="col-sm-10">
							<div class="input-group">
								<span class="input-group-addon" style="min-width:40px;">{{ entry_discount[0] }}</span>
								<input type="text" name="payment_discount_percentage" value="{{ payment_discount_percentage }}" placeholder="{{ entry_discount[1] }}" id="input-discount" class="form-control" />
							</div>
							{% if error.discount_percentage %}
							<div class="text-danger">{{ error_discount }}</div>
							{% endif %}
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-desc-text"><span data-toggle="tooltip" title="{{ help_name_discount }}">{{ entry_title }}</span></label>
						<div class="col-sm-10">
							<input type="text" name="payment_discount_description" value="{{ payment_discount_description }}" placeholder="{{ entry_title }}" id="input-desc-text" class="form-control" />
							{% if error.descriptive_text %}
							<div class="text-danger">{{ entry_title }}</div>
							{% endif %}
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-sort-order"><span data-toggle="tooltip" title="{{ help_sort_order }}">{{ entry_sort_order }}</span></label>
						<div class="col-sm-10">
							<input type="text" name="payment_discount_sort_order" value="{{ payment_discount_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
							<small class="help-block">{{ total_position }}</small>
							{% if error.sort_order %}
							<div class="text-danger">{{ error_sort_order }}</div>
							{% endif %}
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
						<div class="col-sm-10">
							<select name="payment_discount_status" id="input-status" class="form-control">
								{% if payment_discount_status %}
								<option value="1" selected="selected">{{ text_enabled }}</option>
								<option value="0">{{ text_disabled }}</option>
								{% else %}
								<option value="1">{{ text_enabled }}</option>
								<option value="0" selected="selected">{{ text_disabled }}</option>
								{% endif %}
							</select>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
{{ footer }}